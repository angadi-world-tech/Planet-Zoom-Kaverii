<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginRight="20dp"
            android:background="@drawable/food_description"
            android:layout_marginLeft="20dp"
            android:layout_centerInParent="true"
            android:layout_height="400dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:weightSum="1.0"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="0.8"
                    android:layout_height="0dp">
                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_marginLeft="2dp"
                        android:fillViewport="false"
                        android:scrollbarThumbVertical="@drawable/scrollbar"
                        android:scrollbarSize="5dp"
                        android:layout_marginRight="2dp"
                        android:layout_height="match_parent">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_height="match_parent">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_margin="10dp"
                                android:orientation="vertical"
                                android:layout_height="wrap_content">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:orientation="horizontal"
                                    android:weightSum="1.0"
                                    android:layout_height="30dp">
                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:gravity="left|center"
                                        android:layout_weight="0.8"
                                        android:layout_height="match_parent">
                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:textColor="@color/black"
                                            android:text="Love Toast"
                                            android:textSize="16dp"
                                            android:layout_height="wrap_content" />
                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:gravity="center"
                                        android:layout_weight="0.1"
                                        android:layout_height="match_parent">
                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:textColor="@color/black"
                                            android:id="@+id/TextviewCount"
                                            android:textSize="16dp"
                                            android:text="01"
                                            android:layout_height="wrap_content" />
                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:id="@+id/LinLayoutPlusIcon"
                                        android:layout_weight="0.1"
                                        android:gravity="center"
                                        android:layout_height="match_parent">
                                        <ImageView
                                            android:layout_width="13dp"
                                            android:tint="@color/black"
                                            android:src="@mipmap/plus_icon"
                                            android:layout_height="13dp" />
                                    </LinearLayout>

                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_marginTop="15dp"
                                    android:layout_marginBottom="15dp"
                                    android:layout_height="120dp">
                                    <RelativeLayout
                                        android:layout_width="match_parent"

                                        android:layout_height="match_parent">
                                        <ImageView
                                            android:layout_width="match_parent"
                                            android:layout_centerInParent="true"
                                            android:src="@drawable/food2"
                                            android:scaleType="fitXY"
                                            android:layout_height="match_parent" />
                                        <ImageView
                                            android:layout_width="50dp"
                                            android:layout_alignParentBottom="true"
                                            android:src="@mipmap/percentage"
                                            android:layout_marginTop="-60dp"
                                            android:layout_alignParentRight="true"
                                            android:layout_height="50dp" />
                                    </RelativeLayout>

                                </LinearLayout>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:text="Ingredients"
                                    android:layout_marginTop="10dp"
                                    android:textColor="@color/black_dark"
                                    android:textStyle="bold"
                                    android:textSize="14dp"
                                    android:layout_height="wrap_content" />
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:orientation="horizontal"
                                    android:layout_marginTop="5dp"
                                    android:layout_height="wrap_content">
                                    <LinearLayout
                                        android:layout_width="5dp"
                                        android:layout_gravity="center"
                                        android:background="@drawable/black_circle"
                                        android:layout_height="5dp"></LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_gravity="left|center"
                                        android:layout_height="wrap_content">
                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:textSize= "12dp"
                                            android:paddingLeft="5dp"
                                            android:textColor="@color/black"
                                            android:text="4 tsp.mayonnise . 2 slice white sandwich bread"
                                            android:layout_height="wrap_content" />
                                    </LinearLayout>

                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:orientation="horizontal"
                                    android:layout_marginTop="5dp"
                                    android:layout_height="wrap_content">
                                    <LinearLayout
                                        android:layout_width="5dp"
                                        android:layout_gravity="center"
                                        android:background="@drawable/black_circle"
                                        android:layout_height="5dp"></LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_gravity="left|center"
                                        android:layout_height="wrap_content">
                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:textSize= "12dp"
                                            android:paddingLeft="5dp"
                                            android:textColor="@color/black"
                                            android:text="1 tsp.buttur . 2 large eggs salt.  peper"
                                            android:layout_height="wrap_content" />
                                    </LinearLayout>

                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:orientation="horizontal"
                                    android:layout_marginTop="5dp"
                                    android:layout_height="wrap_content">
                                    <LinearLayout
                                        android:layout_width="5dp"
                                        android:layout_gravity="center"
                                        android:background="@drawable/black_circle"
                                        android:layout_height="5dp"></LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_gravity="left|center"
                                        android:layout_height="wrap_content">
                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:textSize= "12dp"
                                            android:paddingLeft="5dp"
                                            android:textColor="@color/black"
                                            android:text="Finely chopped capers"
                                            android:layout_height="wrap_content" />
                                    </LinearLayout>

                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:orientation="horizontal"
                                    android:layout_marginTop="5dp"
                                    android:layout_height="wrap_content">
                                    <LinearLayout
                                        android:layout_width="5dp"
                                        android:layout_gravity="center"
                                        android:background="@drawable/black_circle"
                                        android:layout_height="5dp"></LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_gravity="left|center"
                                        android:layout_height="wrap_content">
                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:textSize= "12dp"
                                            android:paddingLeft="5dp"
                                            android:textColor="@color/black"
                                            android:text="Finely chopped Fresh herbs"
                                            android:layout_height="wrap_content" />
                                    </LinearLayout>

                                </LinearLayout>



                                <TextView
                                    android:layout_width="wrap_content"
                                    android:text="Ingredients"
                                    android:layout_marginTop="20dp"
                                    android:textColor="@color/black_dark"
                                    android:textStyle="bold"
                                    android:textSize="14dp"
                                    android:layout_height="wrap_content" />
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:orientation="horizontal"
                                    android:layout_marginTop="5dp"
                                    android:layout_height="wrap_content">
                                    <LinearLayout
                                        android:layout_width="5dp"
                                        android:layout_gravity="center"
                                        android:background="@drawable/black_circle"
                                        android:layout_height="5dp"></LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_gravity="left|center"
                                        android:layout_height="wrap_content">
                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:textSize= "12dp"
                                            android:paddingLeft="5dp"
                                            android:textColor="@color/black"
                                            android:text="4 tsp.mayonnise . 2 slice white sandwich bread"
                                            android:layout_height="wrap_content" />
                                    </LinearLayout>

                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:orientation="horizontal"
                                    android:layout_marginTop="5dp"
                                    android:layout_height="wrap_content">
                                    <LinearLayout
                                        android:layout_width="5dp"
                                        android:layout_gravity="center"
                                        android:background="@drawable/black_circle"
                                        android:layout_height="5dp"></LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_gravity="left|center"
                                        android:layout_height="wrap_content">
                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:textSize= "12dp"
                                            android:paddingLeft="5dp"
                                            android:textColor="@color/black"
                                            android:text="4 tsp.mayonnise . 2 slice white sandwich bread"
                                            android:layout_height="wrap_content" />
                                    </LinearLayout>

                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:orientation="horizontal"
                                    android:layout_marginTop="5dp"
                                    android:layout_height="wrap_content">
                                    <LinearLayout
                                        android:layout_width="5dp"
                                        android:layout_gravity="center"
                                        android:background="@drawable/black_circle"
                                        android:layout_height="5dp"></LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_gravity="left|center"
                                        android:layout_height="wrap_content">
                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:textSize= "12dp"
                                            android:paddingLeft="5dp"
                                            android:textColor="@color/black"
                                            android:text="4 tsp.mayonnise . 2 slice white sandwich bread"
                                            android:layout_height="wrap_content" />
                                    </LinearLayout>

                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:orientation="horizontal"
                                    android:layout_marginTop="5dp"
                                    android:layout_height="wrap_content">
                                    <LinearLayout
                                        android:layout_width="5dp"
                                        android:layout_gravity="center"
                                        android:background="@drawable/black_circle"
                                        android:layout_height="5dp"></LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_gravity="left|center"
                                        android:layout_height="wrap_content">
                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:textSize= "12dp"
                                            android:paddingLeft="5dp"
                                            android:textColor="@color/black"
                                            android:text="4 tsp.mayonnise . 2 slice white sandwich bread"
                                            android:layout_height="wrap_content" />
                                    </LinearLayout>

                                </LinearLayout>






                            </LinearLayout>

                        </LinearLayout>

                    </ScrollView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="0.2"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:orientation="vertical"
                    android:layout_height="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:weightSum="1.0"
                        android:layout_height="30dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="0.5"
                            android:layout_gravity="left|center"
                            android:gravity="left|center"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="wrap_content"
                                android:text="Price"
                                android:layout_gravity="left|center"
                                android:gravity="left|center"
                                android:textSize="16dp"
                                android:textColor="@color/black"
                                android:textStyle="bold"
                                android:layout_height="wrap_content" />

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="0.5"
                            android:gravity="right|center"
                            android:layout_gravity="right|center"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="wrap_content"
                                android:textSize="16dp"
                                android:text=""
                                android:id="@+id/Rupees_food_description"
                                android:layout_gravity="right|center"
                                android:gravity="right|center"
                                android:textColor="@color/red"
                                android:layout_height="wrap_content" />
                        </LinearLayout>
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_marginTop="5dp"
                        android:background="@color/orange"
                        android:layout_height="1dp"></View>
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Book to Order"
                        android:textStyle="bold"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:layout_gravity="center"
                        android:textColor="@color/orange"
                        android:textSize="16dp"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>


</RelativeLayout>