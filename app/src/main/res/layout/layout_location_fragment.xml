<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:background="@color/white"
    android:clickable="true"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:weightSum="1.0"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="0.1"
            android:orientation="vertical"
            android:layout_height="0dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="0.1"
                android:background="@color/colorPrimary"
                android:orientation="horizontal"
                android:weightSum="1.0"
                android:layout_height="0dp">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="0.1"
                    android:id="@+id/LinLayoutBack"
                    android:gravity="center"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="18dp"
                        android:id="@+id/imageview"
                        android:src="@mipmap/back"
                        android:layout_height="18dp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="0.45"
                    android:orientation="horizontal"
                    android:gravity="left|center"
                    android:weightSum="1.0"
                    android:layout_height="match_parent">



                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:id="@+id/r1"
                        android:layout_marginRight="3dp"
                        android:background="@drawable/profile_tranperant_border"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_height="wrap_content">
                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="35dp"
                            android:id="@+id/ImageViewLinLayout"
                            android:src="@drawable/person_image"
                            android:layout_height="35dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:text="Kaveri Vijapur"
                            android:paddingLeft="8dp"
                            android:paddingRight="8dp"
                            android:id="@+id/NameLinLayout"
                            android:textColor="@color/white"
                            android:textSize="13dp"
                            android:layout_toRightOf="@+id/ImageViewLinLayout"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:text="123456789"
                            android:id="@+id/id_name"
                            android:textColor="@color/white"
                            android:textSize="13dp"
                            android:paddingLeft="8dp"
                            android:paddingRight="8dp"
                            android:layout_below="@+id/NameLinLayout"
                            android:layout_toRightOf="@+id/ImageViewLinLayout"
                            android:layout_height="wrap_content" />


                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:visibility="gone"
                        android:layout_toRightOf="@+id/r1"
                        android:layout_gravity="center"
                        android:id="@+id/r2"
                        android:gravity="center"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="20dp"
                            android:id="@+id/imageview_arrow"
                            android:layout_height="20dp" />
                    </RelativeLayout>








                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="0.25"
                    android:gravity="center"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="60dp"
                        android:src="@drawable/planet_zoom"
                        android:layout_height="40dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="0.2"
                    android:gravity="center"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="25dp"
                        android:src="@drawable/chat_icon"
                        android:layout_height="25dp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="0.08"
            android:layout_height="0dp">
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:background="@color/white"
                card_view:cardElevation="2dp"
                card_view:cardCornerRadius="2dp"
                card_view:contentPadding="2dp"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="0.1"
                        android:gravity="center"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_width="18dp"
                            android:src="@mipmap/google_map"
                            android:layout_height="18dp" />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="0.8"
                        android:layout_height="match_parent">
                        <AutoCompleteTextView
                            android:layout_width="match_parent"
                            android:textSize="12dp"
                            android:hint="Select your location"
                            android:singleLine="true"
                            android:id="@+id/autocomplete"
                            android:background="@color/transparent"
                            android:layout_height="match_parent" />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="0.1"
                        android:gravity="center"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_width="18dp"
                            android:src="@mipmap/mike_icon"
                            android:layout_height="18dp" />

                    </LinearLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>


    </LinearLayout>

</RelativeLayout>