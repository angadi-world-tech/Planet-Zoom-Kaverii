<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <!--start of sender layout-->

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_marginTop="20dp"
                android:visibility="gone"
                android:id="@+id/LinLayoutSenderMsg"
                android:background="@drawable/sender_orange_filled_layout_border"
                android:layout_gravity="right|center"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:paddingTop="7dp"
                    android:paddingBottom="7dp"
                    android:textColor="@color/black"
                    android:id="@+id/TexTviewSenderMsg"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:textSize="13dp"
                    android:layout_height="wrap_content" />




            </LinearLayout>
            <LinearLayout
                android:layout_width="150dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@color/light_gray"
                android:visibility="gone"
                android:id="@+id/LinlayoutSenderAttachFiles"
                android:layout_gravity="right|center"
                android:gravity="right|center"
                android:layout_height="150dp">
                <LinearLayout
                    android:layout_width="148dp"
                    android:layout_height="148dp">
                <ImageView
                    android:layout_width="match_parent"
                    android:scaleType="fitXY"
                    android:id="@+id/ImageviewForSenderattachedFiles"
                    android:layout_height="match_parent" />
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_marginTop="5dp"
                android:visibility="gone"
                android:id="@+id/LinLayoutSenderTime"
                android:layout_gravity="right|center"
                android:gravity="right|center"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="10dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:visibility="gone"
                    android:id="@+id/LinLayoutSenderSeen"
                    android:background="@drawable/blue_filled_circle"
                    android:layout_height="10dp">
                    <ImageView
                        android:layout_width="5dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:src="@mipmap/tick"
                        android:tint="@color/white"
                        android:layout_height="5dp" />

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="@color/gray"
                    android:textSize="8dp"
                    android:id="@+id/TextViewSendertime"
                    android:layout_marginLeft="2dp"
                    android:layout_height="wrap_content" />


            </LinearLayout>

            <!--end of sender layout-->


            <!--start of reciever layout-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone"
                android:id="@+id/LinlayoutReciever"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="30dp"
                    android:id="@+id/ImageViewRecieverPhoto"
                    android:layout_gravity="center"
                    android:layout_height="30dp" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:background="@drawable/reciever_orange_filled_layout_border"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:paddingTop="7dp"
                            android:id="@+id/TextviewRecieverMsg"
                            android:paddingBottom="7dp"
                            android:textColor="@color/white"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:textSize="13dp"
                            android:layout_height="wrap_content" />



                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="150dp"
                        android:layout_marginTop="5dp"
                        android:background="@color/light_gray"
                        android:visibility="gone"
                        android:id="@+id/LinlayoutRecieverAttachFiles"
                        android:layout_gravity="left|center"
                        android:gravity="left|center"
                        android:layout_height="150dp">
                        <LinearLayout
                            android:layout_width="148dp"
                            android:layout_height="148dp">
                        <ImageView
                            android:layout_width="match_parent"
                            android:scaleType="fitXY"
                            android:id="@+id/ImageviewForRecieverattachedFiles"
                            android:layout_height="match_parent" />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_gravity="left|center"
                        android:gravity="left|center"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_width="10dp"
                            android:layout_gravity="center"
                            android:visibility="gone"
                            android:gravity="center"
                            android:background="@drawable/blue_filled_circle"
                            android:layout_height="10dp">
                            <ImageView
                                android:layout_width="5dp"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:src="@mipmap/tick"
                                android:tint="@color/white"
                                android:layout_height="5dp" />

                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:textColor="@color/gray"
                            android:textSize="8dp"
                            android:id="@+id/TextviewReciverTime"
                            android:layout_marginLeft="2dp"
                            android:layout_height="wrap_content" />


                    </LinearLayout>


                </LinearLayout>



            </LinearLayout>
            <!--end of reciever layout-->










        </LinearLayout>




    </LinearLayout>



</RelativeLayout>