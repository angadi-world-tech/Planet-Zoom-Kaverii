<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:clickable="true"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:weightSum="1.0"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="0.1"
            android:orientation="vertical"
            android:weightSum="1.0"
            android:layout_height="0dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="0.3"
                android:background="@color/black"
                android:layout_height="0dp"></LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="0.7"
                android:background="@color/orange"
                android:layout_height="0dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="1.0"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:id="@+id/LinLayoutBack"
                        android:layout_weight="0.15"
                        android:gravity="center"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="20dp"
                            android:src="@mipmap/back"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_height="20dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="0.85"
                        android:gravity="left|center"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:id="@+id/NameTextview"
                            android:padding="5dp"
                            android:textSize="14dp"
                            android:textColor="@color/white"
                            android:layout_height="wrap_content" />


                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="0.8"
            android:layout_height="0dp">

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="0.1"
            android:layout_height="0dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="0dp"
                    android:gravity="center"
                    android:id="@+id/LinlayoutLocation"
                    android:layout_weight="0.2"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="25dp"
                        android:src="@mipmap/location_orange_icon"
                        android:layout_height="25dp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:gravity="center"
                    android:id="@+id/LinLayoutMobile"
                    android:layout_weight="0.2"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="25dp"
                        android:tint="@color/orange"
                        android:src="@mipmap/call_icon"
                        android:layout_height="25dp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:gravity="center"
                    android:id="@+id/LinlayoutEmail"
                    android:layout_weight="0.2"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="25dp"
                        android:src="@mipmap/orange_message_icon"
                        android:layout_height="25dp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:id="@+id/LinlayoutWebsite"
                    android:gravity="center"
                    android:layout_weight="0.2"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="25dp"
                        android:tint="@color/orange"
                        android:src="@mipmap/globe_icon"
                        android:layout_height="25dp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:gravity="center"
                    android:layout_weight="0.2"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="50dp"
                        android:src="@mipmap/rupees_pay"
                        android:layout_height="50dp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
