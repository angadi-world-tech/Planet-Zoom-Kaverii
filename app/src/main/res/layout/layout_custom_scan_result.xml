<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_centerInParent="true"
        android:layout_height="match_parent">
        <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:id="@+id/black"
                android:background="@color/black"
                android:layout_height="30dp">
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:id="@+id/orange"
                android:background="@color/orange"
                android:layout_alignParentTop="true"
                android:layout_height="50dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="1.0"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:id="@+id/LinLayoutBack"
                        android:layout_weight="0.15"
                        android:gravity="center"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="20dp"
                            android:src="@mipmap/back"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_height="20dp" />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="0.85"
                        android:gravity="left|center"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:id="@+id/NameTextview"
                            android:padding="5dp"
                            android:textSize="14dp"
                            android:textColor="@color/white"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>
            <LinearLayout
                    android:layout_width="match_parent"

                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:background="@color/lightgray"
                        android:id="@+id/RellayoutPhoto"
                        android:layout_height="200dp">
                        <ImageView
                            android:layout_width="match_parent"
                            android:scaleType="fitXY"
                            android:id="@+id/capturedPhotoImageview"
                            android:layout_height="200dp" />

                        <RatingBar
                            android:layout_width="wrap_content"
                            android:id="@+id/ratingBar"
                            android:isIndicator="false"
                            android:layout_alignParentRight="true"
                            style="@style/MyRatingBar"
                            android:layout_marginEnd="8dp"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="16dp"
                            android:layout_height="wrap_content" />




                    </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="5dp"
                    android:layout_height="50dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:gravity="bottom"
                        android:weightSum="0.6"
                        android:layout_height="50dp">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="0.1"
                            android:id="@+id/Linlayputfavorites"
                            android:gravity="center"
                            android:layout_height="match_parent">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:src="@mipmap/like_new"
                                android:layout_height="wrap_content" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="0.1"
                            android:gravity="center"
                            android:layout_height="match_parent">
                            <ImageView
                                android:layout_width="25dp"
                                android:src="@mipmap/share_orange"
                                android:layout_height="25dp" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="0.1"
                            android:gravity="center"
                            android:layout_height="match_parent">
                            <ImageView
                                android:layout_width="25dp"
                                android:tint="@color/orange"
                                android:src="@mipmap/like"
                                android:layout_height="25dp" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="0.1"
                            android:gravity="center"
                            android:layout_height="match_parent">
                            <ImageView
                                android:layout_width="25dp"
                                android:tint="@color/orange"
                                android:src="@mipmap/dislike"
                                android:layout_height="25dp" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="0.1"
                            android:gravity="center"
                            android:layout_height="match_parent">
                            <RatingBar
                                android:layout_width="wrap_content"
                                android:id="@+id/ratingBar1"
                                android:isIndicator="false"
                                android:layout_alignParentRight="true"
                                style="@style/MyRatingBar"
                                android:layout_marginEnd="8dp"
                                android:layout_marginStart="8dp"
                                android:layout_marginTop="16dp"
                                android:layout_height="wrap_content" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="0.1"
                            android:gravity="center"
                            android:layout_height="match_parent">
                            <TextView
                                android:layout_width="wrap_content"
                                android:text="4.5"
                                android:textColor="@color/orange"
                                android:textSize="10dp"
                                android:layout_height="wrap_content" />
                        </LinearLayout>



                    </LinearLayout>

                </RelativeLayout>
               </LinearLayout>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:orientation="vertical"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:visibility="gone"
                        android:id="@+id/LinLayoutDescription"
                        android:background="@drawable/description_border"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="match_parent"
                            android:paddingTop="10dp"
                            android:visibility="gone"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:text="@string/desciption"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:layout_width="match_parent"
                            android:textColor="@color/black"
                            android:id="@+id/TextviewDescription"
                            android:textSize="13dp"
                            android:ellipsize="marquee"
                            android:fadingEdge="horizontal"
                            android:singleLine="true"
                            android:marqueeRepeatLimit="marquee_forever"
                            android:scrollHorizontally="true"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:paddingBottom="10dp"
                            android:layout_marginTop="5dp"
                            android:layout_height="wrap_content" />

                    </LinearLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:paddingTop="10dp"
                        android:visibility="gone"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:text="@string/offers"
                        android:id="@+id/Textviewoffers"
                        android:layout_height="wrap_content" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:visibility="gone"
                        android:layout_marginTop="10dp"
                        android:id="@+id/LinLayoutOffers"
                        android:background="@drawable/description_border"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="match_parent"
                            android:textColor="@color/black"
                            android:textSize="11dp"
                            android:id="@+id/TextviewOffers"
                            android:ellipsize="marquee"
                            android:fadingEdge="horizontal"
                            android:singleLine="true"
                            android:marqueeRepeatLimit="marquee_forever"
                            android:scrollHorizontally="true"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:paddingBottom="10dp"
                            android:layout_marginTop="5dp"
                            android:layout_height="wrap_content" />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp"
                        android:weightSum="1.0"
                        android:id="@+id/LinLayoutArrachments"
                        android:padding="10dp"
                        android:background="@drawable/description_border"
                        android:layout_height="80dp">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="0.25"
                            android:background="@color/lightgray"
                            android:gravity="center"
                            android:layout_height="match_parent">
                            <ImageView
                                android:layout_width="30dp"
                                android:src="@mipmap/image_gallery"
                                android:layout_height="30dp" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="0.25"
                            android:background="@color/lightgray"
                            android:layout_marginLeft="6dp"
                            android:layout_marginRight="6dp"
                            android:gravity="center"
                            android:layout_height="match_parent">
                            <ImageView
                                android:layout_width="30dp"
                                android:src="@mipmap/image_gallery"
                                android:layout_height="30dp" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="0.25"
                            android:background="@color/lightgray"
                            android:layout_marginLeft="6dp"
                            android:layout_marginRight="6dp"
                            android:gravity="center"
                            android:layout_height="match_parent">
                            <ImageView
                                android:layout_width="30dp"
                                android:src="@mipmap/image_gallery"
                                android:layout_height="30dp" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="0.25"
                            android:background="@color/lightgray"
                            android:gravity="center"
                            android:layout_height="match_parent">
                            <ImageView
                                android:layout_width="30dp"
                                android:src="@mipmap/image_gallery"
                                android:layout_height="30dp" />
                        </LinearLayout>

                    </LinearLayout>



                </LinearLayout>


            </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"
                    android:layout_height="match_parent">


                    <LinearLayout
                        android:layout_width="0dp"
                        android:gravity="center"
                        android:id="@+id/LinlayoutLocation"
                        android:layout_weight="0.2"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_width="25dp"
                            android:src="@mipmap/location_orange_icon"
                            android:layout_height="25dp" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:gravity="center"
                        android:id="@+id/LinLayoutMobile"
                        android:layout_weight="0.2"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_width="25dp"
                            android:tint="@color/orange"
                            android:src="@mipmap/call_icon"
                            android:layout_height="25dp" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:gravity="center"
                        android:id="@+id/LinlayoutEmail"
                        android:layout_weight="0.2"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_width="25dp"
                            android:src="@mipmap/orange_message_icon"
                            android:layout_height="25dp" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:id="@+id/LinlayoutWebsite"
                        android:gravity="center"
                        android:layout_weight="0.2"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_width="25dp"
                            android:tint="@color/orange"
                            android:src="@mipmap/globe_icon"
                            android:layout_height="25dp" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:gravity="center"
                        android:layout_weight="0.2"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_width="50dp"
                            android:src="@mipmap/rupees_pay"
                            android:layout_height="50dp" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>
    </RelativeLayout>







</RelativeLayout>
