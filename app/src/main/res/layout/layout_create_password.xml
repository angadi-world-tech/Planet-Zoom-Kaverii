<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_above="@+id/bottom"
            android:layout_centerInParent="true"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:weightSum="1.0"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="0.2"
                    android:visibility="gone"
                    android:gravity="center"
                    android:layout_height="0dp">
                    <ImageView
                        android:layout_width="100dp"
                        android:src="@mipmap/planet_zoom_logo"
                        android:layout_height="100dp" />

                </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="1.0"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:layout_height="0dp">



                <TextView
                    android:layout_width="wrap_content"
                    android:text="@string/create_password"
                    android:textStyle="bold"
                    android:textSize="@dimen/edit_text_size_headrer"
                    android:textColor="@color/orange"
                    android:layout_height="wrap_content" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_marginTop="30dp"
                    android:gravity="left|center"
                    android:layout_gravity="left|center"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="@string/password"
                        android:gravity="left|center"
                        android:id="@+id/TextViewPassword"
                        android:layout_gravity="left|center"
                        android:textColor="@color/orange"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/registration_edittext_border"
                    android:layout_height="40dp">
                    <ImageView
                        android:layout_width="15dp"
                        android:layout_marginTop="6dp"
                        android:layout_gravity="center"
                        android:id="@+id/ImageViewPassword"
                        android:layout_marginBottom="6dp"
                        android:layout_marginLeft="10dp"
                        android:src="@mipmap/orange_password_icon"
                        android:layout_height="15dp" />

                    <View
                        android:layout_width="1dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="6dp"
                        android:layout_marginTop="4dp"
                        android:id="@+id/ViewPassword"
                        android:layout_marginBottom="4dp"
                        android:background="@color/orange"
                        android:layout_height="fill_parent"></View>

                    <EditText
                        android:layout_width="match_parent"
                        android:text=""
                        android:singleLine="true"
                        android:gravity="left|center"
                        android:password="true"
                        android:id="@+id/EditTextPassword"
                        android:textCursorDrawable="@drawable/cursor_color"
                        android:layout_gravity="left|center"
                        android:background="@null"
                        android:textColor="@color/blue"
                        android:textSize="@dimen/edit_text_size"
                        android:layout_height="wrap_content" />



                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"></LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_gravity="left|center"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="@string/confirm_pass"
                        android:id="@+id/TextViewConfirmPassword"
                        android:textColor="@color/orange"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="1.0"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/registration_edittext_border"
                    android:layout_height="40dp">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="0.9"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_width="15dp"
                            android:layout_marginTop="6dp"
                            android:id="@+id/ImageviewConfirmPassword"
                            android:layout_gravity="center"
                            android:layout_marginBottom="6dp"
                            android:layout_marginLeft="10dp"
                            android:src="@mipmap/orange_password_icon"
                            android:layout_height="15dp" />

                        <View
                            android:layout_width="1dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="6dp"
                            android:id="@+id/ViewConfirmPassword"
                            android:layout_marginTop="4dp"
                            android:layout_marginBottom="4dp"
                            android:background="@color/orange"
                            android:layout_height="fill_parent"></View>

                        <EditText
                            android:layout_width="match_parent"
                            android:text=""
                            android:singleLine="true"
                            android:password="true"
                            android:inputType="textPassword"
                            android:gravity="left|center"
                            android:textCursorDrawable="@drawable/cursor_color"
                            android:layout_gravity="left|center"
                            android:id="@+id/EditTextConfirmpassword"
                            android:background="@null"
                            android:textColor="@color/blue"
                            android:textSize="@dimen/edit_text_size"
                            android:layout_height="wrap_content" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="0.1"
                        android:id="@+id/eye"
                        android:gravity="center"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_width="20dp"
                            android:tint="@color/orange"
                            android:tag="bg"
                            android:id="@+id/ImageView_eye"
                            android:src="@drawable/hide"
                            android:layout_height="20dp" />

                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="8dp"
                        android:layout_gravity="center"
                        android:id="@+id/LinLayoutmatchedImage"
                        android:layout_marginRight="1dp"
                        android:background="@drawable/disabled_green_filled_circle"
                        android:gravity="center"
                        android:layout_height="8dp">

                        <ImageView
                            android:layout_width="4dp"
                            android:tint="@color/white"
                            android:src="@drawable/ic_check_icon"
                            android:layout_height="4dp" />
                        </LinearLayout>


                    <TextView
                        android:layout_width="wrap_content"
                        android:text="@string/matched"
                        android:layout_marginLeft="1dp"
                        android:id="@+id/TextViewMatched"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textSize="8dp"
                        android:textColor="@color/grenn_disabled"
                        android:layout_height="wrap_content" />

                </LinearLayout>
                
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"></LinearLayout>


                <Button
                    android:layout_width="match_parent"
                    android:text="@string/done"
                    android:textSize="13dp"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:background="@drawable/orange_filled_layout_border"
                    android:layout_height="wrap_content" />


            </LinearLayout>


            </LinearLayout>

        </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/bottom"
        android:visibility="gone"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="7dp"
        android:background="@drawable/orange_filled_layout_border"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_height="50dp">

        <Button
            android:layout_width="match_parent"
            android:text="@string/done"
            android:textSize="13dp"
            android:textAllCaps="false"
            android:id="@+id/Button_Done"
            android:textColor="@color/white"
            android:background="@drawable/transparent"
            android:layout_height="wrap_content" />

    </RelativeLayout>
    </RelativeLayout>


</RelativeLayout>