<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:weightSum="1.0"
        android:layout_height="80dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="0.95"
            android:layout_height="0dp">
            <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:weightSum="1.0"
            android:layout_height="70dp">
            <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="0.13"
                android:orientation="vertical"
            android:gravity="center"
            android:layout_height="match_parent">

                <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="wrap_content"
                        android:elevation="8dp"
                        android:src="@drawable/person_image"
                        android:id="@+id/ImageviewList"
                        android:layout_height="wrap_content"/>



            </LinearLayout>
            <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="0.72"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:gravity="left|center"
            android:layout_height="match_parent">
            <TextView
            android:layout_width="wrap_content"
            android:textColor="@color/black_dark"
            android:textSize="14dp"
            android:layout_marginBottom="1.5dp"
                android:id="@+id/TVname"
            android:singleLine="true"
            android:layout_height="wrap_content" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_gravity="left|center"
                    android:gravity="left|center"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="10dp"
                        android:layout_gravity="center"
                        android:layout_marginRight="2dp"
                        android:layout_marginTop="1.5dp"
                        android:gravity="center"
                        android:visibility="gone"
                        android:id="@+id/LinLayoutSenderSeen"
                        android:background="@drawable/blue_filled_circle"
                        android:layout_height="10dp">
                        <ImageView
                            android:layout_width="5dp"
                            android:layout_gravity="center"
                            android:src="@mipmap/tick"
                            android:tint="@color/white"
                            android:layout_height="5dp" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:textColor="@color/gray"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_marginTop="1.5dp"
                        android:id="@+id/TvMsg"
                        android:textSize="13dp"
                        android:singleLine="true"
                        android:layout_height="wrap_content" />

                </LinearLayout>





            </LinearLayout>
            <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="0.15"
            android:id="@+id/LinLayoutOnline"
            android:visibility="gone"
            android:gravity="center"
            android:layout_height="match_parent">
            <LinearLayout
            android:layout_width="10dp"
            android:background="@drawable/green_filled_circle"
            android:layout_height="10dp">

            </LinearLayout>

            </LinearLayout>
            <LinearLayout
            android:layout_width="0dp"
            android:visibility="gone"
            android:layout_weight="0.15"
            android:id="@+id/LinlayoutSend"
            android:gravity="center"
            android:layout_height="match_parent">
            <LinearLayout
            android:layout_width="match_parent"
            android:background="@color/green"
            android:gravity="center"
            android:layout_height="20dp">
            <TextView
            android:layout_width="wrap_content"
            android:textColor="@color/white"
            android:textSize="10dp"
            android:id="@+id/TVSend"
            android:text="@string/send"
            android:layout_height="wrap_content" />

            </LinearLayout>

            </LinearLayout>

            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="0.05"
            android:orientation="horizontal"
            android:weightSum="1.0"
            android:layout_height="0dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="0.13"
                android:layout_height="match_parent">

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="0.87"
                android:layout_height="match_parent">

                <View
                    android:layout_width="match_parent"
                    android:background="@color/light_gray"
                    android:layout_height="0.3dp">
                </View>

            </LinearLayout>




        </LinearLayout>






    </LinearLayout>





</RelativeLayout>