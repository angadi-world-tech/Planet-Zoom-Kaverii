<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:layout_height="match_parent">

        <com.makeramen.roundedimageview.RoundedImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/imageView1"
            android:layout_width="190dp"
            android:layout_height="150dp"
            android:src="@drawable/app_icon"
            app:riv_corner_radius="8dip"
            app:riv_oval="false" />

        <com.angadi.tripmanagementa.Activities.SubCategory.Helper.TextViewSFProDisplayRegular
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Product Name"
            android:layout_below="@+id/imageView1"
            android:id="@+id/cust_txt_product_name"
            android:layout_marginTop="3dp"
            android:textColor="#585e66"
            android:textSize="15sp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cust_txt_product_name"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <com.angadi.tripmanagementa.Activities.SubCategory.Helper.TextViewSFProDisplaySemibold
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/cust_txt_product_price"
                android:text="Rs.00.00"
                android:textSize="13sp"
                android:textColor="@color/txt_color"/>

            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:visibility="gone"
                android:src="@drawable/ic_clock1"
                tools:ignore="VectorDrawableCompat" />

            <com.angadi.tripmanagementa.Activities.SubCategory.Helper.TextViewSFProDisplayMedium
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/txt_color"
                android:textSize="7sp"
                android:visibility="gone"
                android:id="@+id/cust_txt_product_date_time"
                android:layout_marginLeft="4dp"
                android:layout_gravity="center"
                android:text="00.00.0000"/>

            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:id="@+id/cust_img_edit"
                android:src="@drawable/ic_edit"
                tools:ignore="VectorDrawableCompat" />

            <com.angadi.tripmanagementa.Activities.SubCategory.Helper.TextViewSFProDisplayMedium
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/txt_color"
                android:textSize="7sp"
                android:id="@+id/cust_txt_product_edit"
                android:layout_marginLeft="4dp"
                android:layout_gravity="center"
                android:text="Edit"/>

            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:id="@+id/cust_img_delete"
                android:src="@drawable/ic_delete"
                tools:ignore="VectorDrawableCompat" />

            <com.angadi.tripmanagementa.Activities.SubCategory.Helper.TextViewSFProDisplayMedium
                android:id="@+id/cust_txt_product_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="4dp"
                android:text="Delete"
                android:textColor="@color/txt_color"
                android:textSize="7sp" />

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>