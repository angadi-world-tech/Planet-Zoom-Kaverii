<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:clickable="true"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:weightSum="1.0"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="0.1"
            android:background="@color/orange"
            android:layout_height="0dp">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="0.1"
                android:id="@+id/LinLayoutBack"
                android:gravity="center"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="18dp"
                    android:id="@+id/imageview"
                    android:src="@mipmap/back"
                    android:layout_height="18dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="0.45"
                android:orientation="horizontal"
                android:gravity="left|center"
                android:weightSum="1.0"
                android:layout_height="match_parent">



                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:id="@+id/r1"
                    android:layout_marginRight="3dp"
                    android:background="@drawable/profile_tranperant_border"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_height="wrap_content">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="35dp"
                        android:id="@+id/ImageViewLinLayout"
                        android:src="@drawable/person_image"
                        android:layout_height="35dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Kaveri Vijapur"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:id="@+id/NameLinLayout"
                        android:textColor="@color/white"
                        android:textSize="13dp"
                        android:layout_toRightOf="@+id/ImageViewLinLayout"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="123456789"
                        android:id="@+id/id_name"
                        android:textColor="@color/white"
                        android:textSize="13dp"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:layout_below="@+id/NameLinLayout"
                        android:layout_toRightOf="@+id/ImageViewLinLayout"
                        android:layout_height="wrap_content" />


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:visibility="gone"
                    android:layout_toRightOf="@+id/r1"
                    android:layout_gravity="center"
                    android:id="@+id/r2"
                    android:gravity="center"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="20dp"
                        android:id="@+id/imageview_arrow"
                        android:layout_height="20dp" />
                </RelativeLayout>








            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="0.25"
                android:id="@+id/LinlayoutPlanetZoom"
                android:gravity="center"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="60dp"
                    android:src="@drawable/planet_zoom"
                    android:layout_height="40dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="0.2"
                android:id="@+id/LinLayoutChat"
                android:gravity="center"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="25dp"
                    android:src="@mipmap/chat_icon"
                    android:layout_height="25dp" />
            </LinearLayout>



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="0.07"
            android:background="@color/orange"
            android:orientation="horizontal"
            android:weightSum="0.9"
            android:layout_height="0dp">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="0.3"
                android:layout_marginRight="10dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:background="@drawable/white_layoyt_border1"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_height="match_parent">
                <ImageView
                    android:layout_width="16dp"
                    android:paddingRight="1dp"
                    android:src="@mipmap/location_green"
                    android:layout_height="16dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:textSize="12dp"
                    android:text="Banglore"
                    android:textColor="@color/black"
                    android:paddingLeft="1dp"
                    android:layout_height="wrap_content" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="0.3"
                android:layout_marginRight="10dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:background="@drawable/white_layoyt_border1"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="16dp"
                        android:paddingRight="1dp"
                        android:src="@mipmap/location_red"
                        android:layout_height="16dp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:textSize="12dp"
                        android:text="Mysore"
                        android:textColor="@color/black"
                        android:paddingLeft="1dp"
                        android:layout_height="wrap_content" />
                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="0.3"
                android:layout_marginRight="10dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:background="@drawable/white_layoyt_border1"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="16dp"
                        android:paddingRight="1dp"
                        android:src="@mipmap/location_red"
                        android:layout_height="16dp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:textSize="12dp"
                        android:text="Andhra"
                        android:textColor="@color/black"
                        android:paddingLeft="1dp"
                        android:layout_height="wrap_content" />
                </LinearLayout>

            </LinearLayout>


        </LinearLayout>
w
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="0.07"
            android:background="@color/orange"
            android:orientation="horizontal"
            android:weightSum="0.9"
            android:layout_height="0dp">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="0.3"
                android:layout_marginRight="10dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="8dp"
                        android:paddingRight="2dp"
                        android:tint="@color/white"
                        android:src="@mipmap/square_shape"
                        android:layout_height="8dp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:textSize="11dp"
                        android:text="26 Oct 23 - 2:33"
                        android:textColor="@color/white"
                        android:paddingLeft="2dp"
                        android:layout_height="wrap_content" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="0.3"
                android:layout_marginRight="10dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="8dp"
                        android:paddingRight="2dp"
                        android:tint="@color/white"
                        android:src="@mipmap/square_shape"
                        android:layout_height="8dp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:textSize="11dp"
                        android:text="26 Oct 23 - 2:33"
                        android:textColor="@color/white"
                        android:paddingLeft="2dp"
                        android:layout_height="wrap_content" />
                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="0.3"
                android:layout_marginRight="10dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="8dp"
                        android:paddingRight="2dp"
                        android:tint="@color/white"
                        android:src="@mipmap/square_shape"
                        android:layout_height="8dp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:textSize="11dp"
                        android:text="26 Oct 23 - 2:33"
                        android:textColor="@color/white"
                        android:paddingLeft="2dp"
                        android:layout_height="wrap_content" />
                </LinearLayout>

            </LinearLayout>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="0.05"
            android:gravity="center"
            android:layout_height="0dp">
            <TextView
                android:layout_width="wrap_content"
                android:text="@string/breakpoints"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="13dp"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="0.12"
            android:orientation="horizontal"
            android:layout_height="0dp">
            <HorizontalScrollView
                android:id="@+id/horizontalscrollView"
                android:layout_width="fill_parent"
                android:scrollbarSize="1dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_height="fill_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_width="100dp"
                        android:id="@+id/LinlayoutFood"
                        android:orientation="vertical"
                        android:layout_gravity="center"
                        android:background="@drawable/green_layout_border"
                        android:layout_height="50dp">
                        <ImageView
                            android:layout_width="23dp"
                            android:layout_marginTop="4dp"
                            android:id="@+id/ImageviewFood"
                            android:layout_gravity="center"
                            android:src="@mipmap/food_white_icon"
                            android:layout_height="23dp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:textSize="13dp"
                            android:id="@+id/TextviewFood"
                            android:layout_marginBottom="4dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="1dp"
                            android:textColor="@color/white"
                            android:text="@string/food"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="100dp"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:id="@+id/LinLayoutRestaurants"
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_gravity="center"
                        android:background="@drawable/gray_layout_border_breakpoints"
                        android:layout_height="50dp">
                        <ImageView
                            android:layout_width="23dp"
                            android:layout_marginTop="4dp"
                            android:id="@+id/ImageviewResturants"
                            android:layout_gravity="center"
                            android:src="@mipmap/restaurant_orange_icon"
                            android:layout_height="23dp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:textSize="13dp"
                            android:id="@+id/TextViewResturants"
                            android:layout_gravity="center"
                            android:layout_marginTop="1dp"
                            android:layout_marginBottom="4dp"
                            android:textColor="@color/orange"
                            android:text="@string/restaurants"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="100dp"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:id="@+id/LinlayoutHotel"
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_gravity="center"
                        android:background="@drawable/gray_layout_border_breakpoints"
                        android:layout_height="50dp">
                        <ImageView
                            android:layout_width="23dp"
                            android:layout_marginTop="4dp"
                            android:layout_gravity="center"
                            android:id="@+id/ImageviewHotels"
                            android:src="@mipmap/hotels_orange_icon"
                            android:layout_height="23dp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:textSize="13dp"
                            android:id="@+id/TextviewHotels"
                            android:layout_gravity="center"
                            android:layout_marginTop="1dp"
                            android:layout_marginBottom="4dp"
                            android:textColor="@color/orange"
                            android:text="@string/hotels"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="100dp"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:id="@+id/LinlayoutNearBy"
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_gravity="center"
                        android:background="@drawable/gray_layout_border_breakpoints"
                        android:layout_height="50dp">
                        <ImageView
                            android:layout_width="23dp"
                            android:layout_marginTop="4dp"
                            android:id="@+id/ImageViewNearby"
                            android:layout_gravity="center"
                            android:src="@mipmap/nearby_orange_icon"
                            android:layout_height="23dp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:textSize="13dp"
                            android:id="@+id/TextViewNearby"
                            android:layout_gravity="center"
                            android:layout_marginTop="1dp"
                            android:layout_marginBottom="4dp"
                            android:textColor="@color/orange"
                            android:text="@string/nearby"
                            android:layout_height="wrap_content" />

                    </LinearLayout>




                </LinearLayout>



            </HorizontalScrollView >

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="0.59"
            android:orientation="vertical"
            android:layout_height="0dp">
            <android.support.design.widget.TabLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tablayout"
                app:tabTextColor="@color/black"
                android:elevation="2dp"
                app:tabMode="scrollable"
                app:tabSelectedTextColor="@color/orange"
                android:background="@color/white"
                app:tabIndicatorColor="@color/orange"
                app:tabTextAppearance="@android:style/TextAppearance.Widget.TabWidget"
                android:minHeight="?attr/actionBarSize"
                android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

            </android.support.design.widget.TabLayout>
            <android.support.v4.view.ViewPager
                android:id="@+id/vpPager"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!--<android.support.v4.view.PagerTabStrip-->
                    <!--android:id="@+id/pager_header"-->
                    <!---->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_gravity="left|top" />-->
            </android.support.v4.view.ViewPager>

        </LinearLayout>



    </LinearLayout>

</RelativeLayout>